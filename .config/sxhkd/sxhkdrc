#################################################################
# SUPER + FUNCTION KEYS
#################################################################

#Virtualbox
super + F7
    virtualbox


#Rofi
super + F3
	rofi -combi-modi window,drun,ssh -font "mononoki Nerd Font 16" -show combi -icon-theme "Papirus" -show-icons

super + F2
	~/.local/bin/dmen_run

