autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
filetype plugin on
let mapleader =" "
set backspace=2
set encoding=utf-8
set foldmethod=manual
set hlsearch
set nocompatible
set noswapfile
set number relativenumber
set path+=**
set ruler
set spelllang=en,es
set splitbelow splitright
set tabstop=2
set termwinkey=<C-T>
syntax on
