snippet bf  "Negrita"
\textbf{$1}
endsnippet

snippet enum "Enumerate"
\begin{enumerate}
	\item $1
	\item $2
\end{enumerate}
endsnippet

snippet frame "beamer frame" b
\begin{frame}[fragile] \frametitle{$1}
	$2
\end{frame}

endsnippet

snippet input "utf-8 caracteres" b
\usepackage[T1]{fontenc}
\usepackage[utf8]{inputenc}
endsnippet

snippet eq "Ecuaci√≥n"
\begin{equation}
	$1
\end{equation}
endsnippet

snippet beg "begin end"
\begin{$1}
	$2
\end{$1}
endsnippet

snippet math "Math"
\[
${1:math}
\]
endsnippet

snippet up "Usepackage"
\usepackage{${1:package}} $0
endsnippet

snippet ig "Include graphicx"
\begin{figure}[h]
	\centering
	\includegraphics[scale=${2:0.5}]{${1:imagen.jpg}}
	\caption{${3:caption}}
	\label{${4:label}}
\end{figure}
endsnippet

snippet usemath "paquetes para math" b
\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{amsfonts}
endsnippet

snippet [] "left and rigtht []" b
\left[ $1 \rigt]
endsnippet

snippet minipage "2 columnas" b
\begin{minipage}[b]{\textwidth}
\begin{minipage}[b]{0.5 \textwidth}
	$1
\end{minipage} \hfill
\begin{minipage}[b]{0.5 \textwidth}
	$2
\end{minipage}
\end{minipage}
endsnippet

snippet definecolor "define a color" b
\definecolor{${1:usm}}{RGB}{${2:176,153,40}}
endsnippet

snippet 2ch1p "2 chapters in one page" b
\makeatletter
\patchcmd{\chapter}{\if@openright\cleardoublepage\else\clearpage\fi}{}{}{}
\makeatother
endsnippet

snippet multiline "math multiline" b
\begin{multiline*}
	$1
\end{multiline*}
endsnippet

snippet table "Table" b
\begin{table}[h]
\center
	\begin{tabular}{ll}
		\hline
		${1:a1} & ${2:a2} \\\
		${3:b1} & ${4:b2} \\\
		\hline
	\end{tabular}
\end{table}

endsnippet
