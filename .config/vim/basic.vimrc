autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
filetype plugin on
let mapleader =" "
set encoding=utf-8
set expandtab
set foldmethod=manual
set foldmethod=manual
set laststatus=2
set nocompatible
set noswapfile
set number relativenumber
set ruler
set shiftwidth=2
set softtabstop=2
set spelllang=en,es
set splitbelow splitright
set vb
syntax on

